{
  "motion": {
    "duration": {
      "instant": { "$value": "100ms",  "$type": "duration", "$description": "Micro feedback, toggles" },
      "fast":    { "$value": "150ms",  "$type": "duration", "$description": "Hover, small state changes" },
      "base":    { "$value": "300ms",  "$type": "duration", "$description": "Standard transitions" },
      "slow":    { "$value": "600ms",  "$type": "duration", "$description": "Modals, page sections" },
      "glacial": { "$value": "1200ms", "$type": "duration", "$description": "Hero animations, reveals" }
    },
    "easing": {
      "ease":    { "$value": "cubic-bezier(0.4, 0, 0.2, 1)",      "$type": "cubicBezier", "$description": "Default smooth" },
      "easeIn":  { "$value": "cubic-bezier(0.4, 0, 1, 1)",        "$type": "cubicBezier", "$description": "Elements leaving" },
      "easeOut": { "$value": "cubic-bezier(0, 0, 0.2, 1)",        "$type": "cubicBezier", "$description": "Elements entering" },
      "spring":  { "$value": "cubic-bezier(0.34, 1.56, 0.64, 1)", "$type": "cubicBezier", "$description": "Bouncy, playful" }
    },
    "spring": {
      "gentle": { "$value": "stiffness: 120, damping: 14", "$type": "string", "$description": "Soft, subtle movement" },
      "stiff":  { "$value": "stiffness: 300, damping: 30", "$type": "string", "$description": "Responsive, snappy" },
      "wobbly": { "$value": "stiffness: 180, damping: 12", "$type": "string", "$description": "Expressive, bouncy" }
    }
  }
}
